  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IUsuarioService" />
        <binding name="BasicHttpBinding_IProyectoService" />
        <binding name="BasicHttpBinding_IProformaService" />
        <binding name="BasicHttpBinding_IProyectoService1" />
